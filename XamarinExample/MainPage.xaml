<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinExample.MainPage">

    <StackLayout>
        <StackLayout BackgroundColor="#2196F3" Padding="20,50,20,20">
            <Label Text="Xamarin.Forms"
                   HorizontalTextAlignment="Center"
                   TextColor="White"
                   FontSize="30"/>
        </StackLayout>

        <Grid 
		Padding="40"
		RowSpacing="10"
		ColumnSpacing="10" >
		
		<Grid.RowDefinitions>
			<RowDefinition Height="200" />
			<RowDefinition Height="20" />
			<RowDefinition Height="150" />
		</Grid.RowDefinitions>

		<Button Grid.Row="0" 
		  Text="Exercise"
		  FontSize="30"
		  TextColor="#28282c"
		  BackgroundColor="LightBlue"
		  BorderRadius="30"
		  Clicked="ExerciseButton_Clicked"/>

		<Label Grid.Row="1" />

		<Button Grid.Row="2" 
		  Text="Lesson"
		  FontSize="30"
		  TextColor="#28282c"
		  BackgroundColor="YellowGreen"
		  BorderRadius="30"
		  Clicked="LessonButton_Clicked"/>
	</Grid>
     </StackLayout>

</ContentPage>
